<div class="page-header">
<h2>Parents</h2>
<ul class="actions">
	<%= link_to "Back", admin_url(current_admin), class: "btn btn-primary" %>
</ul>
</div>

<div class="table-responsive">
<table class="table table-bordered">
	<thead>
		<td>Name</td>
		<td>Email</td>
		<td>Phone Number</td>
		<td>Address</td>
		<td></td>
		<td></td>
	</thead>
	<% @parents.each do |parent| %>
		<tr>
			<td><%= parent.name %></td>
			<td><%= parent.email %></td>
			<td><%= parent.phone %></td>
			<td><%= parent.address %></td>
			<td><%= link_to "Transactions", parent_transactions_path(parent), class: "btn btn-primary" %></td>
			<td><%= link_to "View", parent_path(parent), class: "btn btn-primary" %></td>
		</tr>
	<% end %>
</table>
</div>