<div class="page-header">
<h2>Edit <%= @group.name %></h2>
<ul class="actions">
	<li><%= link_to "Back", groups_path, class: "btn btn-primary" %></li>
</ul>
</div>

<%= simple_form_for(@group) do |f| %>
	<%= f.input :name %>
	<%= f.input :price %>
	<%= f.input :tutor, collection: @tutors, selected: @group.tutor %>
	<%= f.input :children, collection: @choices, input_html: { multiple: true }, selected: @existing_id %>

	<%= f.button :submit, class: "btn-primary" %>
<% end %>