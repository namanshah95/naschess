<div class="page-header">
<h2>Admin Portal</h2>
<ul class="actions">
	<li><%= link_to "New Group", new_group_path, class: "btn btn-success" %></li>
</ul>
</div>

<% group_count = @groups.count %>
<% ind = 0 %>
<% @groups.each do |group| %>
<% if ind % 4 == 0 %>
	<div class="row">
<% end %>
	<div class="col-sm-3">
		<div class="panel panel-default">
			<div class="panel-heading">Group #<%= group.id %><%= link_to "Edit", edit_group_path(group), class: "btn btn-warning" %></div>
			<div class="panel-body">
				<p>Tutor: <%= link_to group.tutor.name, tutor_path(group.tutor) %></p>
				<p>Schedule: <%= group.schedule %></p>
				<ul>
					<% Child.where(group_id: group.id).each do |child| %>
						<li><%= link_to child.name, child_path(child) %></li>
					<% end %>
				</ul>
			</div>
		</div>
	</div>
<% if ind == group_count-1 or ind % 4 == 3 %>
	</div>
<% end %>
<% ind += 1 %>
<% end %>